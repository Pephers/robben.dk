---
import { Image } from "astro:assets";

interface Props {
    caption: string;
    image: ImageMetadata;
}

const { image, caption } = Astro.props;
---

<style>
    figure {
        grid-column: full;
        width: calc(var(--content-max-width) * 1.5);
        max-width: 100%;
        margin: 1rem auto;
        padding: 0.5rem;
        background: #ffffff;
        border: 1px solid #d0bea2;
        box-sizing: border-box;
    }

    figcaption {
        padding-top: 0.5rem;
        color: #6d5e46;
        font-size: 16px;
        font-style: italic;
        max-width: var(--content-max-width);
        margin: 0 auto;
        text-align: center;
    }
</style>

<figure>
    <Image
        src={image}
        sizes="(min-width: 800px) 800px, calc(var(--content-max-width) * 1.5)"
        alt={caption}
    />
    <figcaption>{caption}</figcaption>
</figure>
